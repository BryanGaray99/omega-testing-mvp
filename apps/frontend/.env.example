# ===================================
# ===================================
# Omega Testing - Environment Variables
# ===================================

# Application Configuration
VITE_APP_NAME=Omega Testing
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Omega Testing

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Development Configuration
NODE_ENV=development
PORT=3000

# Build Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true

# Feature Flags (Future Implementations)
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_TEAM_FEATURES=false
VITE_ENABLE_ADVANCED_REPORTS=false

# External Services (Future)
# VITE_OPENAI_API_KEY=your_openai_key_here
# VITE_GITHUB_CLIENT_ID=your_github_client_id
# VITE_SENTRY_DSN=your_sentry_dsn

# Database (Future)
# DATABASE_URL=postgresql://username:password@localhost:5432/Omega Testing
# REDIS_URL=redis://localhost:6379

# Authentication (Future)
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# Email Service (Future)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# File Storage (Future)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=Omega Testing-files

# Monitoring and Analytics (Future)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# MIXPANEL_TOKEN=your_mixpanel_token

# Development Tools
VITE_SHOW_DEV_TOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true

# Security
# CORS_ORIGIN=http://localhost:5173
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ===================================
# Instructions:
# 1. Copy this file to .env
# 2. Update values according to your environment
# 3. Never commit .env to version control
# 4. Variables prefixed with VITE_ are available in the frontend
# 5. Other variables are server-side only
# ===================================
