{
  "name": "omega-testing-mvp",
  "version": "1.0.1",
  "private": false,
  "description": "CLI to run Omega Testing dashboard (React) + API (NestJS) with Playwright workspaces.",
  "author": "Bryan Garay",
  "license": "MIT",
  "keywords": [
    "testing",
    "playwright",
    "bdd",
    "nestjs",
    "react",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/omega-testing-mvp.git"
  },
  "homepage": "https://github.com/your-org/omega-testing-mvp#readme",
  "bugs": {
    "url": "https://github.com/your-org/omega-testing-mvp/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "omega-testing": "./bin/omega-testing.js",
    "omega-testing-mvp": "./bin/omega-testing.js"
  },
  "files": [
    "bin/",
    "dist/",
    "scripts/",
    "README.md"
  ],
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "node scripts/start-dev.js",
    "start": "node scripts/start-prod.js",
    "dev:frontend": "npm run dev -w apps/frontend",
    "dev:backend": "npm run start:dev -w apps/backend",
    "build": "npm run build:dist",
    "build:dist": "npm run build:frontend && npm run build:backend && npm run copy:builds",
    "build:frontend": "npm run build -w apps/frontend",
    "build:backend": "npm run build -w apps/backend",
    "copy:builds": "node scripts/copy-builds.js",
    "prepublishOnly": "npm run build:dist",
    "test:cli": "node bin/omega-testing.js info",
    "health": "node scripts/health-check.js"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.0.0"
  },
  "devDependencies": {},
  "overrides": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
